# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.home

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET /products             controllers.Products.list
GET /products/create      controllers.Products.create
POST /products/create      controllers.Products.submit
GET /products/:id         controllers.Products.show(id: Long)
GET /products/:id/edit    controllers.Products.edit(id: Long)
PUT /products/:id         controllers.Products.update(id: Long)


GET /privacyPolicy                  controllers.Pages.privacyPolicy()

GET /about                          controllers.Pages.about()
